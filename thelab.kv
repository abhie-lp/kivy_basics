<WidgetsExample>:
    cols: 3
    ToggleButton:
        text: 'OFF'
        on_state: root.on_toggle_button_state(self)
        size_hint: None, 1
        width: '100dp'
    Button:
        text: 'COUNTER'
        on_press: root.on_button_click()
        disabled: not root.start_counter
    Label:
        text: root.count
        font_name: 'fonts/Lcd.ttf'
        font_size: '200dp'
        color: 1, .5, 1, 1
    Switch:
        id: my_switch
        size_hint: None, 1
        width: '100dp'
        on_active: root.on_switch_active(self)
    Slider:
        id: my_slider
        min: 0
        max: 100
        value: root.slider_value_txt
        step: 1
        disabled: not my_switch.active
        on_value: root.on_slider_value(self)
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: str(my_slider.value)
        ProgressBar:
            max: 100
            value: int(my_slider.value)
    TextInput:
        id: my_textinput
        size_hint: None, 1
        width: '100dp'
        multiline: False
        on_text_validate: root.on_textinput_validate(self)
    Label:
        text: 'Label: ' + root.textinput_txt

