WidgetsExample:

<WidgetsExample>:
    cols: 3
    ToggleButton:
        text: 'OFF'
        on_state: root.on_toggle_button_state(self)
        size_hint: None, 1
        width: '100dp'
    Button:
        text: 'COUNTER'
        on_press: root.on_button_click()
        disabled: not root.start_counter
    Label:
        text: root.count
        font_name: 'fonts/Lcd.ttf'
        font_size: '200dp'
        color: 1, .5, 1, 1

<PageLayoutExample@PageLayout>:
    MainWidget:
    BoxLayoutExample:
    AnchorLayoutExample:
    GridLayoutExample:
    ScrollViewLayoutExample:

<ScrollViewLayoutExample@ScrollView>
    StackLayoutExample:
        size_hint: 1, None
        height: self.minimum_height

<GridLayoutExample>:
    rows: 3
    Button:
        text: 'A'
    Button:
        text: 'B'
    Button:
        text: 'C'
    BoxLayout:
        Button:
            text: 'D'
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'E'
            Button:
                text: 'F'
        Button:
            text: 'G'
    Button:
        text: 'H'
    Button:
        text: 'I'
    Button:
        text: 'J'


<AnchorLayoutExample>:
    anchor_x: 'left'
    anchor_y: 'top'
    BoxLayout:
        size_hint: .3, .3
        Button:
            text: 'Anchor 1'
        Button:
            text: 'Anchor 2'

<BoxLayoutExample>:
    orientation: 'vertical'
    Button:
        text: 'Button 1'
        size_hint: .5, .5
        pos_hint: {"center_x": .5}
    Button:
        text: 'Button 2'
    Label:
        text: 'Label 1'
    BoxLayout:
        spacing: '10dp'
        Button:
            text: 'Button 3'
        Button:
            text: 'Button 4'
        Button:
            text: 'Button 5'
        Button:
            text: 'Button 6'
    Button:
        text: 'Button 7'

<MainWidget>:
    Button:
        text: 'Hello'
        size: '100dp', '100dp'
        pos: '100dp', '200dp'
    Label:
        text: 'Hello 2'
        size: '100dp', '100dp'
        pos: '200dp', '200dp'
        color: 39, 79, 89, 1
