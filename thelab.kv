AnchorLayoutExample:

<AnchorLayoutExample>:
    anchor_x: 'left'
    anchor_y: 'top'
    BoxLayout:
        size_hint: .3, .3
        Button:
            text: 'Anchor 1'
        Button:
            text: 'Anchor 2'

<BoxLayoutExample>:
    orientation: 'vertical'
    Button:
        text: 'Button 1'
        size_hint: .5, .5
        pos_hint: {"center_x": .5}
    Button:
        text: 'Button 2'
    Label:
        text: 'Label 1'
    BoxLayout:
        spacing: '10dp'
        Button:
            text: 'Button 3'
        Button:
            text: 'Button 4'
        Button:
            text: 'Button 5'
        Button:
            text: 'Button 6'
    Button:
        text: 'Button 7'

<MainWidget>:
    Button:
        text: 'Hello'
        size: '100dp', '100dp'
        pos: '100dp', '200dp'
    Label:
        text: 'Hello 2'
        size: '100dp', '100dp'
        pos: '200dp', '200dp'
        color: 39, 79, 89, 1
